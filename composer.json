{
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit --log-junit reports/test-reports.xml --coverage-clover reports/coverage.xml",
        "lint": "phpcs --standard=PSR12 app/src/ app/public/",
        "analyse": "phpstan analyse app/src/ --level=5"
}

}